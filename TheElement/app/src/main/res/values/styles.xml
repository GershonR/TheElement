<resources>

    <attr name="mainColorDark" format="reference|color" />
    <attr name="mainColor" format="reference|color" />
    <attr name="accentColor" format="reference|color" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mainColor">@color/colorPrimary</item>
        <item name="mainColorDark">@color/colorPrimaryDark</item>
        <item name="accentColor">@color/colorAccent</item>

    </style>


    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mainColor">@color/greenPrimary</item>
        <item name="mainColorDark">@color/greenPrimaryDark</item>
        <item name="accentColor">@color/greenAccent</item>

    </style>

    <style name="DarkBlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mainColor">@color/redPrimary</item>
        <item name="mainColorDark">@color/redPrimaryDark</item>
        <item name="accentColor">@color/redAccent</item>

    </style>

</resources>
